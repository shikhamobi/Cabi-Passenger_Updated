<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CardTxt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@drawable/arrrowright"
            android:padding="10dp"
            android:text="@string/Language"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:padding="10dp"
            android:text="@string/split_"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/spliton_off"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            app:theme="@style/Color1SwitchStyle"
            android:textOff=""
            android:textOn="" />

        <View
            android:id="@+id/img_lineup"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/linebottom_light" />

    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/linebottom_light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/favoritedriver"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:padding="10dp"
            android:text="@string/favoritedriver_"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/favoritedriverson_off"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            app:theme="@style/Color1SwitchStyle"
            android:textOff=""
            android:textOn=""
           />



    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/linebottom_light" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@color/white"
            android:padding="10dp"
            android:text="@string/skip_fav"
            android:textColor="@color/black"
            android:textSize="@dimen/text_normal" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/skip_drop_on_off"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:checked="true"
            app:theme="@style/Color1SwitchStyle"
            android:textOff=""
            android:textOn=""
            />



    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/linebottom_light" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/baseUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="10dp"
            android:textColor="@color/button_accept"
            android:text="skjdfkjhj"/>
        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:textColor="@color/textviewcolor_light"
           />
    </RelativeLayout>
</LinearLayout>