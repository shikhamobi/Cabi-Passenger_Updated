<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/hideoldpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:padding="9dp"
                android:text="@string/show"
                android:textColor="@color/black"
                android:visibility="gone" />


            <EditText
                android:id="@+id/oldpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/hideoldpwd"
                android:background="@color/white"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/password"
                android:gravity="right"
                android:hint="@string/oldpwd"
                android:inputType="textPassword"
                android:maxLength="32"
                android:padding="10dp"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_dialog_small" />

        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linebottom_light" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/hidenewpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:padding="9dp"
                android:text="@string/show"
                android:textColor="@color/black"
                android:visibility="gone" />

            <EditText
                android:id="@+id/newpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/hidenewpwd"
                android:background="@color/white"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/password"
                android:gravity="right"
                android:hint="@string/newpwd"
                android:inputType="textPassword"
                android:maxLength="32"
                android:padding="10dp"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_dialog_small" />

        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linebottom_light" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <TextView
                android:id="@+id/hideconfirmpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@color/white"
                android:padding="9dp"
                android:text="@string/show"
                android:textColor="@color/black"
                android:visibility="gone" />


            <EditText
                android:id="@+id/confirmpwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/hideconfirmpwd"
                android:background="@color/white"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/confirm_password"
                android:gravity="right"
                android:hint="@string/conpwd"
                android:inputType="textPassword"
                android:maxLength="32"
                android:padding="10dp"
                android:textColorHint="@color/hintcolor"
                android:textSize="@dimen/text_dialog_small" />

        </RelativeLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linebottom_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/submit"
                android:textAllCaps="false"
                android:textColor="@color/button_accept"
                android:textSize="@dimen/text_dialog_small" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/linebottom_light" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_dialog_small" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>