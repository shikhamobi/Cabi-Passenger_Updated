<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/reason_bg"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/reason_title"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/linebottom_light" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_reason_one"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/reason1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="@string/reason1"
                android:textColor="@color/textviewcolor_light"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".25"
                android:padding="10dp"
                android:src="@drawable/tick_unfocus" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/linebottom_light"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lay_reason_two"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="@string/reason2"
                android:textColor="@color/textviewcolor_light"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".25"
                android:padding="10dp"
                android:src="@drawable/tick_unfocus" />


        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="@color/linebottom_light"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/lay_reason_three"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="@string/reason3"
                android:textColor="@color/textviewcolor_light"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".25"
                android:padding="10dp"
                android:src="@drawable/tick_unfocus" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_reason_four"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="@string/reason4"
                android:textColor="@color/textviewcolor_light"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/check4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".25"
                android:padding="10dp"
                android:src="@drawable/tick_unfocus" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_reason_five"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="@string/reason5"
                android:textColor="@color/textviewcolor_light"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/check5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".25"
                android:padding="10dp"
                android:src="@drawable/tick_unfocus" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_reason_six"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reason6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:gravity="bottom"
                android:padding="10dp"
                android:text="@string/reason6"
                android:textColor="@color/textviewcolor_light"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/check6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight=".25"
                android:padding="10dp"
                android:src="@drawable/tick_unfocus" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/reasonotherlay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="2">

            <EditText
                android:id="@+id/reasonother"
                style="@style/enterTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rect_home_bottom"
                android:gravity="right"
                android:maxLength="150"
                android:padding="10dp"
                android:textColor="@color/textviewcolor_light" />

            <Button
                android:id="@+id/reson_submit"
                style="@style/enterTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@color/button_accept"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>