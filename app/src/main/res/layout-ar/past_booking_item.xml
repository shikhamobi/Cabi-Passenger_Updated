<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"

    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/map_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/splash" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center_vertical">

                <com.cabipassenger.util.RoundedImageView
                    android:id="@+id/driver_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/trip_time"
                    android:layout_width="150dp"
                    android:gravity="right"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/driver_image"
                    android:paddingTop="5dp"
                    android:text="sunn"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/trip_driver_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trip_time"
                    android:layout_toLeftOf="@+id/driver_image"
                    android:padding="5dp"
                    android:text="ddfsfs"
                    android:textColor="@color/textviewcolor_dark" />

                <TextView
                    android:id="@+id/trip_payment_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="@string/cash"
                    android:layout_alignParentLeft="true"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:textColor="@color/pastbookingcashtext"
                    android:textSize="13sp" />


                <TextView
                    android:id="@+id/trip_payment_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/trip_payment_type"
                    android:paddingLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:paddingRight="8dp"
                    android:text="$25.00"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/trip_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/trip_payment_amount"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="8dp"
                    android:text="@string/completed"
                    android:textColor="@color/textviewcolor_dark" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

  </android.support.v7.widget.CardView>
</FrameLayout>